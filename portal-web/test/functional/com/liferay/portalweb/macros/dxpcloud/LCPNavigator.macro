definition {

	macro goToDropdownAnyItem {
		Click(locator1 = "LCPNavigation#USER_AVATAR_PORTRAIT");

		Click(
			key_item = "${dropdownItem}",
			locator1 = "LCPNavigation#USER_AVATAR_DROPDOWN_ANY_ITEM");
	}

	macro goToPortlet {
		if (IsVisible(locator1 = "LCPNavigation#EXPAND_SIDEBAR_MENU")) {
			Click(locator1 = "LCPNavigation#EXPAND_SIDEBAR_MENU");
		}

		Click(
			key_itemName = "${category}",
			locator1 = "LCPNavigation#SIDEBAR_ITEM");
	}

}